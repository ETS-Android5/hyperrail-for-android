<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".activities.FirstLaunchGuide$FirstLaunchFragment">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:text="Departures &amp; Arrivals"
        android:textColor="@color/colorTextLight"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="2"
        android:gravity="center_horizontal|top"
        android:text="Whether you're catching a train or waiting for someone special, we've got you covered"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/listitem_content_primary_textsize" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="9"
        android:adjustViewBounds="false"
        android:contentDescription="First launch illustration"
        android:paddingBottom="0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/firstlaunch_settings_framed"
        tools:ignore="UnusedAttribute" />

</LinearLayout>