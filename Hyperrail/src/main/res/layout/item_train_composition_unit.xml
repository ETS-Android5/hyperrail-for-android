<?xml version="1.0" encoding="utf-8"?>
<be.hyperrail.android.viewgroup.VehicleCompositionUnitLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/binder"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="35dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/btn_dialog"
        android:textColor="@color/colorTextDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_traincomp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HLE 27"
            android:textAlignment="center"
            android:textColor="@color/colorTextLight"
            android:background="@drawable/rounded_corner_4dp"
            android:padding="4dp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/label_traincomp_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2705"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorTextDark"
            android:visibility="visible" />


        <TextView
            android:id="@+id/label_traincomp_firstclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorTextLight"
            android:background="@drawable/rounded_corner_4dp_seatingclass"
            android:visibility="visible" />


        <TextView
            android:id="@+id/label_traincomp_secondclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorTextLight"
            android:background="@drawable/rounded_corner_4dp_seatingclass"
            android:visibility="visible" />
    </LinearLayout>
</be.hyperrail.android.viewgroup.VehicleCompositionUnitLayout>